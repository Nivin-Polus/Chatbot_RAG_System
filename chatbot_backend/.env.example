# Claude AI Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.0

# Database Configuration - MySQL (Recommended for Production)
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=Chatbot_1
DATABASE_USER=root
DATABASE_PASSWORD=your_mysql_password_here
DATABASE_CHARSET=utf8mb4
DATABASE_COLLATION=utf8mb4_unicode_ci

# Note: In MySQL, DATABASE_NAME is the schema name
# Make sure this database/schema exists in your MySQL server

# Database Connection Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# MySQL SSL Configuration (Optional)
DATABASE_SSL_DISABLED=false
# DATABASE_SSL_CA=/path/to/ca-cert.pem
# DATABASE_SSL_CERT=/path/to/client-cert.pem
# DATABASE_SSL_KEY=/path/to/client-key.pem

# Alternative: Direct Database URL (overrides above settings if provided)
# DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/Chatbot_1?charset=utf8mb4

# For SQLite (Development Only)
# DATABASE_TYPE=sqlite
# DATABASE_NAME=chatbot
# DATABASE_URL=sqlite:///./chatbot.db

# Vector Database
VECTOR_DB_URL=http://localhost:6333

# Authentication
SECRET_KEY=your-super-secret-jwt-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE_MB=25
ALLOWED_FILE_TYPES=pdf,docx,pptx,xlsx,txt

# Optional: Redis Cache
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Mode
APP_MODE=api
